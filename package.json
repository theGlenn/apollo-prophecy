{
  "name": "apollo-prophecy",
  "version": "0.2.3-0",
  "description": "Generate Spec compliant and shareable errors for Apollo Client/Server from JSON or Graphql Schema",
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "test": "rm -rf coverage && nyc mocha --opts mocha.opts",
    "report": "nyc report && open ./coverage/index.html",
    "coverage": "nyc report --reporter=text-lcov | coveralls && open ./coverage/index.html",
    "testreport": "npm run test && npm run report",
    "build": "rm -rf lib && tsc",
    "cli": "ts-node src/cli.ts",
    "preversion": "npm test",
    "version": "npm run build && git add -A lib",
    "postversion": "git push && git push --tags && rm -rf lib",
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "prepatch-release": "npm version prepatch && npm publish && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theGlenn/apollo-pythian.git"
  },
  "keywords": [
    "apollo",
    "graphql",
    "errors",
    "apollo-client",
    "apollo-server"
  ],
  "author": "Glenn Sonna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theGlenn/apollo-pythian/issues"
  },
  "homepage": "https://github.com/theGlenn/apollo-pythian#readme",
  "dependencies": {
    "@types/rimraf": "^3.0.0",
    "apollo-link": "^1.2.2",
    "apollo-link-http": "^1.5.4",
    "apollo-server": "^2.0.0-beta.5",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "jsonfile": "^4.0.0",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.1.2",
    "rimraf": "^2.6.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-fs": "^2.0.2",
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^26.0.15",
    "@types/jsonfile": "^4.0.1",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.3.0",
    "@types/yargs": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.1.2",
    "chai-fs": "^2.0.0",
    "coveralls": "^3.0.1",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "jest": "^26.6.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.6",
    "ts-jest": "^26.4.2",
    "ts-node": "6.1.0",
    "typescript": "^2.9.1"
  },
  "resolutions": {
    "**@types/mocha": "^5.2.0",
    "**@types/express": "^4.16.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "lib",
      "**/*.d.ts",
      "coverage"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
