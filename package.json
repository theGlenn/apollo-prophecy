{
  "name": "apollo-prophecy",
  "version": "0.2.3-0",
  "description": "Generate Spec compliant and shareable errors for Apollo Client/Server from JSON or Graphql Schema",
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "test": "jest --collectCoverage",
    "test:watch": "jest --watch --runInBand --detectOpenHandles --coverage --env=node",
    "coverage": "jest --collectCoverage && cat ./coverage/lcov.info | coveralls",
    "build": "rm -rf lib && tsc",
    "cli": "ts-node src/cli.ts",
    "preversion": "npm test",
    "version": "npm run build && git add -A lib",
    "postversion": "git push && git push --tags && rm -rf lib",
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "prepatch-release": "npm version prepatch && npm publish && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theGlenn/apollo-pythian.git"
  },
  "keywords": [
    "apollo",
    "graphql",
    "errors",
    "apollo-client",
    "apollo-server"
  ],
  "author": "Glenn Sonna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theGlenn/apollo-pythian/issues"
  },
  "homepage": "https://github.com/theGlenn/apollo-pythian#readme",
  "dependencies": {
    "@types/rimraf": "^3.0.0",
    "apollo-link": "^1.2.2",
    "apollo-link-http": "^1.5.4",
    "apollo-server": "^2.0.0-beta.5",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.9.2",
    "jsonfile": "^4.0.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^3.1.1",
    "rimraf": "^2.6.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-fs": "^2.0.2",
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^24.0.21",
    "@types/jsonfile": "^4.0.1",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.3.0",
    "@types/yargs": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.1.2",
    "chai-fs": "^2.0.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "jest": "^24.9.0",
    "source-map-support": "^0.5.6",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.7.5"
  },
  "resolutions": {
    "**@types/mocha": "^5.2.0",
    "**@types/express": "^4.16.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "lib",
      "**/*.d.ts",
      "coverage"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
